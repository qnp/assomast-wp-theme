$burger-ease ?= cubic-bezier(0.77, 0.2, 0.05, 1)

// nav bar
nav#menu
  height size(10)
  position fixed
  left 0
  right 0
  background-color transparent
  display flex
  align-items center
  padding 0 size(3)
  color $color--black
  z-index 10
  elevation('black', 0)
  elevation-transition()

  &.nav--plain
    background-color lighten($color--white, 25%)
    elevation('black', 5)

  .ctas
    z-index 3
    display flex
    align-items flex-end

    button
      margin-left size(2)

  .menu-menu-principal-container
    overflow hidden

  ul.menu
    display flex
    align-items center

    > li.menu-item
      transition opacity 0.75s, transform 0.35s ease
      padding size(1.5) size(2)

      for $n in 1..10
        &:nth-child({$n})
          transition-delay ($n + 1) * 0.1s

      a[href]
        link-interactive-on()
        color inherit

        &:hover
          color $color--primary

    > li.menu-item-has-children
      &::after
        content 'â–¼'
        font-size 9px
        transform scale(1, 0.55)
        user-select none
        display inline-block
        margin-left 2px
        position relative
        bottom 2px

      &:hover, &:focus-within
        color $color--primary

        ul.sub-menu
          opacity 1
          visibility visible

  ul.sub-menu
    opacity 0
    visibility hidden
    transition opacity 0.2s
    position absolute
    background-color lighten($color--white, 40%)
    padding size(1.5) size(1)
    margin-top size(1.5)
    border-radius size(1)
    elevation('primary', 7)

    > li.menu-item
      padding size(1.5)
      width 100%

      a[href]
        width 100%

#burger
  display block
  position relative
  top 0
  left 0
  z-index 1
  user-select none
  white-space nowrap

  .menu-content
    display flex
    align-items center

  // Hidden input for the hamburger
  input
    display none
    width size(3)
    height size(3)
    position absolute
    top -6px
    left -4px
    cursor pointer
    opacity 0
    z-index 2
    -webkit-touch-callout none

  // Hamburger
  span
    display none
    width size(3)
    height 2px
    margin-bottom size(0.75)
    position relative
    background $color--white
    border-radius 3px
    z-index 1
    transform-origin 2px 0px
    transition transform 0.5s $burger-ease, background 0.5s $burger-ease, opacity 0.55s ease
    transform translate(size(0.75), size(0.75))

    &:first-child
      transform-origin 0% 0%

    &:nth-last-child(2)
      transform-origin 0% 100%

  .burger-background
    display none
    background-color $color--primary
    width size(15.5)
    height size(15.5)
    border-radius size(8)
    position absolute
    top size(-8.5)
    left size(-8.5)
    transition transform 0.5s $burger-ease
    elevation('primary', 5)

  input
    // Burger animation
    &:checked ~ span
      opacity 1
      transform translate(8px, 8px) rotate(45deg) scale(1.07, 1)
      background $color--white

    &:checked ~ span:nth-last-child(3)
      opacity 0
      transform translate(8px, 8px) rotate(0deg) scale(0.2, 0.2)

    &:checked ~ span:nth-last-child(2)
      transform translate(8px, 8px) rotate(-45deg) scale(1.07, 1)

    // Menu animation
    &:checked ~ .menu-content
      transform none

      ul.menu > li.menu-item
        opacity 1
        transform none

    &:checked ~ .burger-background
      transform scale(4.75)

+media-down('sm')
  nav#menu
    height 100%
    background none
    justify-content flex-start
    align-items flex-start
    padding size(1.5)
    color $color--white
    white-space normal

    .logo
      order 0
      margin-top size(-0.75)
      margin-left size(4.5)
      margin-right 0

    &.nav--plain
      background none

      .logo
        opacity 0
        visibility hidden

    ul.menu
      margin-top size(2)
      display block

      > li.menu-item
        opacity 0
        transform translateX(-100px)

        a[href]:hover
          color inherit

      > li.menu-item-has-children
        &::after
          content ''
          display none

        &:hover, &:focus-within
          color inherit

    ul.sub-menu
      display none

  #burger
    // Make this absolute positioned at the top left of the screen
    .menu-content
      position absolute
      width 100vw
      transform-origin 0% 0%
      transform translate(-100%, 0)
      transition transform 0.5s $burger-ease
      flex-direction column
      align-items flex-start

    .burger-background, input, span
      display block

+media-down('xs')
  nav#menu
    .ctas
      flex-direction column

      button
        margin-bottom size(1)

+media-down('xxs')
  nav#menu
    .logo
      display none