button
  border none
  height size(5)
  border-radius size(2.5)
  padding 0 size(2.5)
  cursor pointer
  background-color transparent
  appearance none
  color inherit
  display inline-flex
  align-items center
  transition all 0.25s ease
  white-space nowrap

  svg
    width size(2)
    height size(2)
    min-width size(2)
    min-height size(2)
    margin-right size(1)

  &.button--large
    height size(6)
    border-radius size(3)
    padding 0 size(3)
    font-size 18px

    svg
      width size(2.5)
      height size(2.5)
      min-width size(2.5)
      min-height size(2.5)

  for $name in $color-names
    &.button--{$name}
      $color = lookup('$color--' + $name)
      background-color $color

      if ($name == 'primary')
        color $color--white

        svg
          path
            fill $color--white
      else
        color white

        svg
          path
            fill white

      &:hover
        background-color lighten($color, 15%)