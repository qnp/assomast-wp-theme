/*
 * Breakpoints
 */
$breakpoints := {
  xxs: 360px,
  xs: 600px,
  sm: 960px,
  md: 1200px,
  lg: 1920px,
}

$epsilon = 0.01

media-down($breakpoint_name)
  @media (max-width: $breakpoints[$breakpoint_name] - $epsilon)
    {block}

media-up($breakpoint_name)
  @media (min-width: $breakpoints[$breakpoint_name])
    {block}

media-between($breakpoint_name_1, $breakpoint_name_2)
  @media (min-width: $breakpoints[$breakpoint_name_1]) and (max-width: $breakpoints[$breakpoint_name_2] - $epsilon)
    {block}

generate-responsive-classes()
  for $breakpoing_name, $breakpoint_value in $breakpoints
    .{$breakpoing_name}-and-down
      @media (min-width: $breakpoint_value)
        display none !important

    .{$breakpoing_name}-and-up
      @media (max-width: $breakpoint_value - $epsilon)
        display none !important

generate-responsive-classes()
