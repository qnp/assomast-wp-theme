title-font()
  font-family 'Abril Fatface', cursive

body-font()
  font-family 'Open Sans', sans-serif

html, body
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  body-font()

h1, h2, h3, h4, h5, h6, p, ul, li, label, small, caption
  font-weight 400
  color inherit

h1, h2, h3, h4, h5, h6
  title-font()

p, ul, li, label, small, caption, button
  body-font()

h1, h2, h3, h4, h5, h6, p
  margin-top 0
  margin-bottom size(2)

caption
  display inline-block
  text-align inherit
  width 100%

h1
  font-size 8 * $step
  line-height 9 * $step

h2
  font-size 5 * $step
  line-height 6.5 * $step

h3
  font-size 4 * $step
  line-height 5 * $step

h4
  font-size 3 * $step
  line-height 4.5 * $step

h5
  font-size 2.5 * $step
  line-height 3.5 * $step

h6
  font-size 2 * $step
  line-height 3 * $step

p
  font-size 2 * $step
  line-height 3 * $step

caption
  font-size 1.5 * $step
  line-height 2 * $step

button
  font-size 2 * $step
  line-height 3 * $step
